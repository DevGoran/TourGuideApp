<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for banners on main screen. -->
    <style name="main_banner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_banner_height</item>
        <item name="android:layout_marginTop">@dimen/main_banner_margin_top</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="shapeAppearanceOverlay">@style/roundedCornersImageView</item>
    </style>

    <!-- Style for banners on main screen in landscape. -->
    <style name="main_banner_land_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_banner_height_land</item>
        <item name="android:layout_marginTop">@dimen/main_banner_margin_top</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="shapeAppearanceOverlay">@style/roundedCornersImageView</item>
    </style>

    <!-- Style for TextViews in "official channels" section on the main screen of each city. -->
    <style name="channels_textview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/channels_textview_layout_height</item>
        <item name="android:layout_marginStart">@dimen/channels_textview_style_margin_start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/channels_textview_textSize</item>
    </style>

    <!-- Style for icon's in "official channels" section on the main screen of each city. -->
    <style name="channels_icon_style">
        <item name="android:layout_width">@dimen/channels_icon_size</item>
        <item name="android:layout_height">@dimen/channels_icon_size</item>
    </style>

    <!-- Style for LinearLayout in "official channels" section on the main screen of each city. -->
    <style name="channels_linear_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/channels_linear_layout_style_margin_top</item>
        <item name="android:layout_marginStart">@dimen/channels_linear_layout_style_margin_start
        </item>
        <item name="android:layout_marginEnd">@dimen/channels_linear_layout_style_margin_end</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for city description on the main screen for each city. -->
    <style name="city_description_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/city_description_margin_top</item>
        <item name="android:layout_marginStart">@dimen/city_description_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/city_description_margin_end</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Style for "official channels" header on the main screen of each city. -->
    <style name="social_media">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/official_channels_header_margin_top</item>
        <item name="android:layout_marginStart">@dimen/official_channels_header_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/official_channels_header_margin_end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/official_channels_text_size</item>
    </style>

    <!-- Style for each city's banner in each activity -->
    <style name="city_banner_fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/city_banner_fragment_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- Style for tab's-->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <!-- Style for tab's-->
    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="android:background">@null</item>
    </style>

    <!-- Style for shapeable views. -->
    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <!-- Style for icons of donations part in MainPlacesActivity. -->
    <style name="donations_icons_style">
        <item name="android:layout_width">@dimen/donation_icon_width</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/donation_icon_height</item>
        <item name="android:layout_marginStart">@dimen/donation_icon_marging_start</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:maxHeight">@dimen/donation_icon_max_size</item>
        <item name="android:maxWidth">@dimen/donation_icon_max_size</item>
    </style>

    <!-- Style for ImageViews in MainActivity. -->
    <style name="main_activity_picker_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_activity_text_view_height</item>
        <item name="fontFamily">@font/agencyb</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:letterSpacing">@dimen/main_activity_text_view_letter_spacing</item>
        <item name="android:textSize">@dimen/main_activity_text_view_size</item>
    </style>
</resources>