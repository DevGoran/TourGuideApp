<?xml version="1.0" encoding="utf-8"?><!-- Layout for a single list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/list_item_icon_size"
        android:layout_height="@dimen/list_item_icon_size"
        android:layout_gravity="center_vertical"
        android:importantForAccessibility="no"
        android:padding="@dimen/list_item_padding" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_linear_layout_height"
        android:orientation="vertical"
        android:paddingStart="@dimen/list_item_linear_layout_Start"
        android:paddingTop="@dimen/list_item_linear_layout_padding_top"
        android:paddingEnd="@dimen/list_item_linear_layout_padding_end"
        android:paddingBottom="@dimen/list_item_linear_layout_padding_bottom">

        <TextView
            android:id="@+id/text_text_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_upper_text_view_height"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/list_item_upper_text_view_text_size"
            android:textStyle="bold"
            tools:text="Restaurant name" />

        <TextView
            android:id="@+id/info_text_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_lower_text_view_height"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/white"
            tools:text="Restaurant name" />
    </LinearLayout>
</LinearLayout>