<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/parent_linear_layout_padding_bottom"
        tools:context=".fragment.vancouver.VancouverMainFragment">

        <!-- Picture by Goran Vlacic (me). -->
        <ImageView
            style="@style/city_banner_fragment"
            android:importantForAccessibility="no"
            android:src="@drawable/vancouver_main_fragment_banner" />

        <!-- Introduction to Vancouver. -->
        <TextView
            style="@style/city_description_style"
            android:text="@string/vancouver_introduction" />

        <!-- Beginning of the social media section. -->
        <TextView
            style="@style/social_media"
            android:text="@string/social_media" />

        <!-- Website. -->
        <LinearLayout
            android:id="@+id/website_vancouver_linear_view"
            style="@style/channels_linear_layout_style"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/channels_icon_style"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_world_wide_web" />

            <TextView
                style="@style/channels_textview_style"
                android:text="@string/tourism_vancouver" />
        </LinearLayout>

        <!-- Twitter. -->
        <LinearLayout
            android:id="@+id/twitter_vancouver_linear_view"
            style="@style/channels_linear_layout_style"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/channels_icon_style"
                android:importantForAccessibility="no"
                android:src="@drawable/ic__43_twitter" />

            <TextView
                style="@style/channels_textview_style"
                android:text="@string/tourism_vancouver" />
        </LinearLayout>

        <!-- Instagram. -->
        <LinearLayout
            android:id="@+id/instagram_vancouver_linear_view"
            style="@style/channels_linear_layout_style"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/channels_icon_style"
                android:importantForAccessibility="no"
                android:src="@drawable/ic__25_instagram" />

            <TextView
                style="@style/channels_textview_style"
                android:text="@string/inside_vancouver" />
        </LinearLayout>

        <!-- Facebook. -->
        <LinearLayout
            android:id="@+id/facebook_vancouver_linear_view"
            style="@style/channels_linear_layout_style"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                style="@style/channels_icon_style"
                android:importantForAccessibility="no"
                android:src="@drawable/ic__21_facebook" />

            <TextView
                style="@style/channels_textview_style"
                android:text="@string/inside_vancouver" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>