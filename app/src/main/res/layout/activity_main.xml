<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <!--Photo by Adi Kavazovic from Pexels. License: https://www.pexels.com/license/ -->
        <ImageView
            android:id="@+id/vancouver_banner"
            style="@style/main_banner_style"
            android:src="@drawable/vancouver_banner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <!--Photo by Sarath SunilDutt from Pexels. License: https://www.pexels.com/license/ -->
        <!--ImageView just for design purposes. -->
        <ImageView
            android:id="@+id/saskatoon_banner"
            style="@style/main_banner_style"
            android:src="@drawable/saskatoon_banner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vancouver_banner"
            tools:ignore="ContentDescription" />

        <!--Photo by Designecologist from Pexels. License: https://www.pexels.com/license/ -->
        <!--ImageView just for design purposes. -->
        <ImageView
            android:id="@+id/toronto_banner"
            style="@style/main_banner_style"
            android:src="@drawable/toronto_banner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/saskatoon_banner"
            tools:ignore="ContentDescription" />

        <!--Photo by Erik Mclean from Pexels. License: https://www.pexels.com/license/ -->
        <!--ImageView just for design purposes. -->
        <ImageView
            android:id="@+id/st_johns_banner"
            style="@style/main_banner_style"
            android:src="@drawable/st_johns_banner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toronto_banner"
            tools:ignore="ContentDescription" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>