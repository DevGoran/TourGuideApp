<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Photo by Pixabay from Pexels. License: https://www.pexels.com/license/ -->
    <ImageView
        android:id="@+id/trips_text_view"
        style="@style/main_activity_picker_style"
        android:importantForAccessibility="no"
        android:src="@drawable/trip_main_picker_banner"
        app:layout_constraintBottom_toTopOf="@id/places_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Photo by Burst from Pexels. License: https://www.pexels.com/license/ -->
    <ImageView
        android:id="@+id/places_text_view"
        style="@style/main_activity_picker_style"
        android:importantForAccessibility="no"
        android:src="@drawable/places_main_picker_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trips_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>